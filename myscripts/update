#!/bin/sh
# Update script for users.

cdir=$(pwd)
curl -sLO https://codeload.github.com/venj/myscripts/zip/master
unzip -q master
cd myscripts-master
adir=$(basename $(pwd))
cp -f my /usr/local/bin/my
mkdir -p /usr/local/bin/myscripts
cp -f myscripts/* /usr/local/bin/myscripts/
cd $cdir
rm -rf $adir
